      "required": [
        "name",
        "plan"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "john.com"
        },
        "plan": {
          "type": "string",
          "example": "month-1000"
        }
      }
    },
    "NewPlan": {
      "required": [
        "name",
        "amount",
        "interval"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "Month plan"
        },
        "amount": {
          "type": "integer",
          "example": "1000"
        },
        "interval": {
          "type": "string",
          "enum": [
            "month",
            "yearly",
            "every3months",
            "every6months"
          ],
          "example": "month"
        },
        "id": {
          "type": "string",
          "example": "month-400"
        }
      }
    },
    "NewSubscription": {
      "required": [
        "plan"
      ],
      "properties": {
        "plan": {
          "type": "string",
          "example": "month-400"
        }
      }
