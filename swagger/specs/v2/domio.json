          "example": 123
        },
        "message": {
          "type": "string",
          "example": "Some error happened"
        }
      }
    },
    "DomainInfo": {
      "required": [
        "name",
        "owner",
        "price"
      ],
      "properties": {
        "name": {
          "type": "string",
          "example": "john.com"
        },
        "owner": {
          "type": "string",
          "example": "john.com"
        },
        "price": {
          "type": "integer",
          "example": 1000
        },
        "tags": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Tag"
          }
        },
        "status": {
          "type": "string",
          "description": "domain status in the store"
        }
      }
    },
